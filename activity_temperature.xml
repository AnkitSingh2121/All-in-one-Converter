<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bormul"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Temperature">

    <TextView
        android:id="@+id/temp"
        android:background="#E7C995"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:text="TEMPERATURE CONVERTER"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/editText"
        android:background="#D8F3D8"
        android:layout_marginTop="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="25dp"
        android:inputType="numberDecimal"
        android:hint="Enter Temperature"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="42dp" />
    <RadioGroup
        android:layout_width="fill_parent"
        android:background="#EECACA"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:checked="true"
            android:padding="25dp"
            android:text="Celsius to Farenheit" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="25dp"
            android:text="Farenheit to Celsius" />


    </RadioGroup>
    <Button
        android:id="@+id/button7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CONVERT"
        android:background="#D7E2E2"
        android:padding="25dp"
        android:layout_gravity="center"
        android:onClick="convert"/>

    <TextView
        android:id="@+id/textView6"
        android:background="#090000"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#F2F5F2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</androidx.appcompat.widget.LinearLayoutCompat>