<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#1BCA7E"
    android:layout_height="match_parent"
    tools:context=".square">


   <TextView
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:textStyle="bold"
       android:typeface="serif"
       android:textSize="15dp"
       android:text="SQUARE CONVERTER"
       android:gravity="center"
       android:padding="20dp"
       android:background="#BE90EEA5"

       />

    <TextView
        android:id="@+id/textView9"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert the Number" />

    <EditText
        android:id="@+id/editText3"
        android:padding="25dp"
        android:background="#E4D4D7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Enter here" />

    <Button
        android:id="@+id/button8"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:onClick="Squclk"
        android:background="@drawable/roundbutton"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:text="Result: "
        android:background="#8AD38A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</androidx.appcompat.widget.LinearLayoutCompat>